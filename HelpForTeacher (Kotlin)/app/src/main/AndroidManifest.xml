<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lili.teacherhelper">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.teacherhelper.TeacherApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.teacherhelper.activity.LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.teacherhelper.activity.SignupActivity"
            android:label="@string/title_activity_signup" />
        <activity
            android:name="com.teacherhelper.activity.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.teacherhelper.activity.TeacherActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.teacherhelper.activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teacherhelper.activity.ClassesActivity"
            android:label="@string/title_activity_classes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.teacherhelper.activity.ClassCreateActivity" />
        <activity android:name="com.teacherhelper.activity.ClassActivity"></activity>
    </application>

</manifest>